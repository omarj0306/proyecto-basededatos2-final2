CREATE TABLE CELULAR (ID_CEL INTEGER, MARCA_CEL VARCHAR2(120), MODELO VARCHAR2 (80),PRECIO VARCHAR2(80), COMPANIA VARCHAR2(120), CONSTRAINT PK_ID_CELULAR PRIMARY KEY (ID_CEL));

CREATE TABLE CLIENTE (ID_CLI INTEGER, NOMBRE VARCHAR2(120), TELEFONO VARCHAR2(80), DIRECCION VARCHAR2(150), MARCA_CEL VARCHAR2 (120), CONSTRAINT PK_ID_CLIENTE PRIMARY KEY (ID_CLI));

CREATE TABLE PROVEDOR (ID_PRO INTEGER, CANTIDAD_PRO VARCHAR2 (50), MARCA_PRO VARCHAR2 (80), MODELO VARCHAR2 (120), CONSTRAINT PK_ID_PROVEDOR PRIMARY KEY (ID_PRO));



CREATE SEQUENCE SECUENCIA_CELULAR 
   START WITH 1 
  INCREMENT BY 1 
   NOMAXVALUE; 


CREATE SEQUENCE SECUENCIA_CLIENTE 
   START WITH 1 
   INCREMENT BY 1 
NOMAXVALUE; 

CREATE SEQUENCE SECUENCIA_PROVEDOR 
   START WITH 1 
   INCREMENT BY 1 
NOMAXVALUE; 



CREATE OR REPLACE PROCEDURE GUARDAR_CELULAR(MY_ID_CEL OUT INTEGER, MY_MARCA_CEL IN VARCHAR2,MY_MODELO IN VARCHAR2, MY_PRECIO IN VARCHAR2, MY_COMPANIA IN VARCHAR2) 
  AS 
  BEGIN 
  SELECT SECUENCIA_CELULAR.NEXTVAL INTO MY_ID_CEL FROM DUAL; 
  INSERT INTO CELULAR VALUES (MY_ID_CEL,MY_MARCA_CEL, MY_MODELO,MY_PRECIO, MY_COMPANIA); 
  END; 


CREATE OR REPLACE PROCEDURE GUARDAR_CLIENTE(MY_ID_CLI OUT INTEGER, MY_NOMBRE IN VARCHAR2,MY_TELEFONO IN VARCHAR2, MY_DIRECCION IN VARCHAR2, MY_MARCA_CEL IN VARCHAR2) 
  AS 
  BEGIN 
  SELECT SECUENCIA_CLIENTE.NEXTVAL INTO MY_ID_CLI FROM DUAL; 
  INSERT INTO CLIENTE VALUES (MY_ID_CLI,MY_NOMBRE, MY_TELEFONO,MY_DIRECCION, MY_MARCA_CEL); 
  END; 
  
  
  CREATE OR REPLACE PROCEDURE GUARDAR_PROVEDOR(MY_ID_PRO OUT INTEGER, MY_CANTIDAD_PRO IN VARCHAR2,MY_MARCA_PRO IN VARCHAR2, MY_MODELO IN VARCHAR2) 
  AS 
  BEGIN 
  SELECT SECUENCIA_PROVEDOR.NEXTVAL INTO MY_ID_PRO FROM DUAL; 
  INSERT INTO PROVEDOR VALUES (MY_ID_PRO,MY_CANTIDAD_PRO, MY_MARCA_PRO,MY_MODELO); 
  END; 
